# Lock-in MCP Server Configuration Template
# DO NOT commit this file with real credentials
# Copy to .env.local and fill in your values

# ============================================================================
# Database Server Configuration (lockin-db)
# ============================================================================
# Read-only Supabase connection (RLS-enforced)
# See tools/mcp/docs/SUPABASE_READONLY_SETUP.md for setup instructions
LOCKIN_DB_CONNECTION_STRING=postgresql://readonly_user:your_password@db.PROJECT_REF.supabase.co:5432/postgres
LOCKIN_DB_MAX_ROWS=1000
LOCKIN_DB_TIMEOUT_MS=5000
LOCKIN_DB_READONLY=true

# ============================================================================
# Files Server Configuration (lockin-files)
# ============================================================================
# Repository file access (read-only, respects allowed/excluded paths)
# Use double backslashes for Windows paths: C:\\Users\\user\\Lock-in
LOCKIN_REPO_ROOT=C:\\path\\to\\Lock-in
LOCKIN_EXTENSION_PATH=C:\\path\\to\\Lock-in\\extension
LOCKIN_CORE_PATH=C:\\path\\to\\Lock-in\\core
LOCKIN_API_PATH=C:\\path\\to\\Lock-in\\api
LOCKIN_DOCS_PATH=C:\\path\\to\\Lock-in\\docs
LOCKIN_INTEGRATIONS_PATH=C:\\path\\to\\Lock-in\\integrations

# ============================================================================
# Build Server Configuration (lockin-build)
# ============================================================================
# Safe build commands only (type-check, lint, test, verify-build)
LOCKIN_BUILD_TIMEOUT_MS=300000
LOCKIN_BUILD_MAX_OUTPUT_BYTES=1048576

# ============================================================================
# Docs Server Configuration (lockin-docs)
# ============================================================================
# Documentation search (indexed markdown files)
LOCKIN_DOCS_INDEX_PATH=C:\\path\\to\\Lock-in\\docs

# ============================================================================
# Supabase Project Reference
# ============================================================================
LOCKIN_SUPABASE_PROJECT_REF=your_project_ref
LOCKIN_SUPABASE_URL=https://your_project_ref.supabase.co
