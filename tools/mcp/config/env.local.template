# Copy this file to .env.local in the repo root and fill in your values
# .env.local is gitignored and should never be committed

# Supabase (read-only for MCP, separate from backend service_role)
# Create a read-only user in Supabase Dashboard → Database → Users
# Grant SELECT on public schema: GRANT SELECT ON ALL TABLES IN SCHEMA public TO readonly_user;
SUPABASE_READONLY_CONNECTION_STRING=postgresql://postgres:[READONLY_PASSWORD]@[PROJECT_REF].supabase.co:5432/postgres?sslmode=require

# Backend (for fetch MCP server)
BACKEND_URL=http://localhost:3000

