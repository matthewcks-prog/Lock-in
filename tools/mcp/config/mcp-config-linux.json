{
  "_comment": "Linux/Ubuntu-specific MCP configuration. Copy to .cursor/mcp.json and update paths if needed.",
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem"],
      "env": {
        "ALLOWED_DIRECTORIES": "/home/user/path/to/repo"
      }
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"],
      "env": {
        "GIT_REPO_PATH": "/home/user/path/to/repo"
      }
    },
    "shell-linux": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-bash"],
      "env": {
        "WORKING_DIRECTORY": "/home/user/path/to/repo",
        "ALLOWED_COMMANDS": "npm,node,npx,cd,git",
        "BLOCKED_PATTERNS": "rm -rf,git push --force,git reset --hard"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-playwright"],
      "env": {
        "ALLOWED_DOMAINS": "localhost,learning.monash.edu,edstem.org,panopto.com,echo360.org",
        "EXTENSION_PATH": "/home/user/path/to/repo/extension",
        "TIMEOUT_MS": "30000"
      }
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "env": {
        "ALLOWED_ORIGINS": "http://localhost:3000,https://*.supabase.co",
        "RATE_LIMIT_PER_MINUTE": "10"
      }
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${SUPABASE_READONLY_CONNECTION_STRING}",
        "READ_ONLY_MODE": "true",
        "ALLOWED_SCHEMAS": "public"
      }
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-context7"]
    }
  }
}
